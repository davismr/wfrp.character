<div id="skills-advanced" class="border">
    <div class="row">
        <div class="col-md-12 caption">Grouped & Advanced Skills</div>
    </div>
    <div class="row">
        <div class="col-md-4">Name</div>
        <div class="col-md-4 center">Characteristic</div>
        <div class="col-md-2 center">Adv</div>
        <div class="col-md-2 center">Skill</div>
    </div>
    <div class="row"
        tal:repeat="skill character.skills">
        <div tal:omit-tag=""
            tal:define="data python:skill_data[skill.split(' (')[0]]">
            <div class="col-md-4">${skill}</div>
            <div class="col-md-2">${data["characteristic"][1]}</div>
            <div class="col-md-2 center">${getattr(character, data["characteristic"][0])}</div>
            <div class="col-md-2 center">${character.skills[skill]}</div>
            <div class="col-md-2 center">
                ${character.skills[skill] + getattr(character, data["characteristic"][0])}
            </div>
        </div>
    </div>
</div>
