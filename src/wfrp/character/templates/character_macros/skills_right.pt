<div id="skills-right" class="border">
    <div class="row">
        <div class="col-md-12 caption">Basic Skills</div>
    </div>
    <div class="row">
        <div class="col-md-4">Name</div>
        <div class="col-md-4 center">Characteristic</div>
        <div class="col-md-2 center">Adv</div>
        <div class="col-md-2 center">Skill</div>
    </div>
    <div class="row" tal:repeat="skill character.get_basic_skills('right')">
        <div tal:omit-tag=""
             tal:define="skill_info skill_data[skill.split(' (')[0]];
                         attribute_level getattr(character, skill_info['characteristic'][0])">
            <div class="col-md-4">${skill}</div>
            <div class="col-md-2 center">${skill_info["characteristic"][1]}</div>
            <div class="col-md-2 center">${attribute_level}</div>
            <div class="col-md-2 center">${character.skills.get(skill, "&nbsp;")}</div>
            <div class="col-md-2 center">${character.skills.get(skill, 0) + attribute_level}</div>
        </div>
    </div>
</div>
