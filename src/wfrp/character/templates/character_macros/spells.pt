<div id="spells" class="border">
    <div class="row">
        <div class="col-md-12 caption">Spells and Prayers</div>
    </div>
    <div class="row">
        <div class="col-md-2">Name</div>
        <div class="col-md-1">CN</div>
        <div class="col-md-1">Range</div>
        <div class="col-md-1">Target</div>
        <div class="col-md-1">Duration</div>
        <div class="col-md-6">Effect</div>
    </div>
    <div class="row"
        tal:define="spell_data character.get_spells()"
        tal:repeat="spell spell_data">
        <div class="col-md-2">${spell}</div>
        <div class="col-md-1">${spell_data[spell]["CN"]|""}</div>
        <div class="col-md-1">${spell_data[spell]["range"]|""}</div>
        <div class="col-md-1">${spell_data[spell]["target"]|""}</div>
        <div class="col-md-1">${spell_data[spell]["duration"]|""}</div>
        <div class="col-md-6 text-truncate">${spell_data[spell]["description"]}</div>
    </div>
</div>
