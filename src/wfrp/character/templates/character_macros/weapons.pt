<div id="weapons" class="border">
    <div class="row">
        <div class="col-md-12 caption">Weapons</div>
    </div>
    <div class="row">
        <div class="col-md-3">Name</div>
        <div class="col-md-1 center">Group</div>
        <div class="col-md-1 center">Enc</div>
        <div class="col-md-1 center">Range/Reach</div>
        <div class="col-md-1 center">Damage</div>
        <div class="col-md-5">Qualities</div>
    </div>
    <div class="row" tal:repeat="weapon python:character.get_weapons()">
        <div class="col-md-3">${weapon["name"]}</div>
        <div class="col-md-1 center">${weapon["group"]}</div>
        <div class="col-md-1 center">${weapon["encumberance"]}</div>
        <div class="col-md-1 center">${weapon["reach"]}</div>
        <div class="col-md-1 center">${weapon["damage"]}</div>
        <div class="col-md-5">${weapon["qualities"]}</div>
    </div>
</div>
