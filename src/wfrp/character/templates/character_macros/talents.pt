<div id="talents" class="border">
    <div class="row">
        <div class="col-md-12 caption">Talents</div>
    </div>
    <div class="row">
        <div class="col-md-3">Talent Name</div>
        <div class="col-md-1 center">Times taken</div>
        <div class="col-md-8">Description</div>
    </div>
    <div class="row" tal:repeat="talent character.talents">
        <div class="col-md-3">${talent}</div>
        <div class="col-md-1 center">${character.talents[talent]}</div>
        <div class="col-md-8 text-truncate">${character.get_talent_description(talent)}</div>
    </div>
</div>
