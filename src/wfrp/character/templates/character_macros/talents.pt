<table class="talents_table" id="talents" border=1>
    <thead>
        <tr>
            <th colspan="3">TALENTS</th>
        </tr>
        <tr>
            <th>Talent Name</th>
            <th>Times taken</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <tr tal:repeat="talent character.talents">
            <td>${talent}</td>
            <td>${character.talents[talent]}</td>
            <td>${character.get_talent_description(talent)}</td>
        </tr>
    </tbody>
</table>
