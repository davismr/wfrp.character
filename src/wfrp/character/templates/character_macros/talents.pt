<table id="talents">
    <caption>Talents</caption>
    <thead>
        <tr>
            <th>Talent Name</th>
            <th>Times taken</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <tr tal:repeat="talent character.talents">
            <td>${talent}</td>
            <td>${character.talents[talent]}</td>
            <td>${character.get_talent_description(talent)}</td>
        </tr>
    </tbody>
</table>
