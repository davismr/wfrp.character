<table>
    <tr>
        <td>
            <table id="fate">
                <thead>
                    <tr>
                        <th colspan="2" class="section-header">Fate</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Fate</td>
                        <td>${character.fate}</td>
                    </tr>
                    <tr>
                        <td>Fortune</td>
                        <td>${character.fortune}</td>
                    </tr>
                </tbody>
            </table>
        </td>
        <td>
            <table id="resilience">
                <thead>
                    <tr>
                        <th colspan="3" class="section-header">Resilience</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Resilience</td>
                        <td>Resolve</td>
                        <td>Motivation</td>
                    </tr>
                    <tr>
                        <td>${character.resilience}</td>
                        <td>${character.resolve}</td>
                        <td>${character.motivation}</td>
                    </tr>
                </tbody>
            </table>
        </td>
        <td>
            <table id="experience">
                <thead>
                    <tr>
                        <th colspan="3" class="section-header">Experience</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Current</td>
                        <td>Spent</td>
                        <td>Total</td>
                    </tr>
                    <tr>
                        <td>${character.experience}</td>
                        <td>${character.experience_spent}</td>
                        <td>${character.experience + character.experience_spent}</td>
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>
</table>
