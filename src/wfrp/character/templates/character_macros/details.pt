<div id="details" class="border">
    <div class="row">
        <div class="col-md-6"><span>Name: ${character.name}</span></div>
        <div class="col-md-3"><span>Species: ${character.species}</span></div>
        <div class="col-md-3"><span>Class: ${character.career_class}</span></div>
    </div>
    <div class="row">
        <div class="col-md-6"><span>Career: ${character.career}</span></div>
        <div class="col-md-6"><span>Career Tier: ${character.career_title}</span></div>
    </div>
    <div class="row">
        <div class="col-md-9"><span>Career Path: ${", ".join(character.career_path)}</span></div>
        <div class="col-md-3"><span>Status: ${character.career_tier} ${character.career_standing}</span></div>
    </div>
    <div class="row">
        <div class="col-md-3"><span>Age: ${character.age} years</span></div>
        <div class="col-md-3"><span>Height: ${character.height//12}'${character.height % 12}"</span></div>
        <div class="col-md-3"><span>Hair: ${character.hair}</span></div>
        <div class="col-md-3"><span>Eyes: ${character.eyes}</span></div>
    </div>
</div>
