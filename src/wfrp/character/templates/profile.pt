<div metal:use-macro="load: layout.pt">
    <div metal:fill-slot="content">

        <h2>Warhammer Fantasy Roleplay Character generator</h2>
        <h3>My Campaigns</h3>
        <ul>
            <li tal:repeat="campaign campaigns">
                <a href="${campaign}">${campaigns[campaign]}</a>
            </li>
        </ul>
        <h3>My Characters</h3>
        <ul>
            <li tal:repeat="character characters">
                <a href="${character}">${characters[character]}</a>
            </li>
        </ul>
    </div>
</div>
