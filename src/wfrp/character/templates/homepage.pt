<div metal:use-macro="load: layout.pt">
    <div metal:fill-slot="page_css">
        <link rel="stylesheet" type="text/css"
              href="${request.static_url('wfrp.character:static/google.css')}"/>
    </div>
    <div metal:fill-slot="content">

        <h2>Warhammer Fantasy Roleplay Character generator</h2>
        <div metal:use-macro="load: about_warning.pt" />
        <div tal:condition="request.registry.settings['wfrp.character.enable_auth']">
            <div tal:condition="view.logged_in is None">
                <div metal:use-macro="load: google_login.pt" />
            </div>
        </div>
        <ul>
            <li tal:repeat="character characters">
                <a href="${character}">${characters[character]}</a>
            </li>
        </ul>
    </div>
</div>
