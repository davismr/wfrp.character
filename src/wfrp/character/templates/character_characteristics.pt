<table metal:define-macro="characteristics" border="1">
    <thead>
        <tr>
            <th colspan="11">CHARACTERISTICS</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>&nbsp;</td>
            <td>WS</td>
            <td>BS</td>
            <td>S</td>
            <td>T</td>
            <td>I</td>
            <td>Ag</td>
            <td>Dex</td>
            <td>Int</td>
            <td>WP</td>
            <td>Fel</td>
        </tr>
        <tr>
            <td>Initial</td>
            <td>${character.weapon_skill_initial}</td>
            <td>${character.ballistic_skill_initial}</td>
            <td>${character.strength_initial}</td>
            <td>${character.toughness_initial}</td>
            <td>${character.initiative_initial}</td>
            <td>${character.agility_initial}</td>
            <td>${character.dexterity_initial}</td>
            <td>${character.intelligence_initial}</td>
            <td>${character.willpower_initial}</td>
            <td>${character.fellowship_initial}</td>
        </tr>
        <tr>
            <td>Advances</td>
            <td>${character.weapon_skill_advances}</td>
            <td>${character.ballistic_skill_advances}</td>
            <td>${character.strength_advances}</td>
            <td>${character.toughness_advances}</td>
            <td>${character.initiative_advances}</td>
            <td>${character.agility_advances}</td>
            <td>${character.dexterity_advances}</td>
            <td>${character.intelligence_advances}</td>
            <td>${character.willpower_advances}</td>
            <td>${character.fellowship_advances}</td>
        </tr>
        <tr>
            <td>Current</td>
            <td>${character.weapon_skill}</td>
            <td>${character.ballistic_skill}</td>
            <td>${character.strength}</td>
            <td>${character.toughness}</td>
            <td>${character.initiative}</td>
            <td>${character.agility}</td>
            <td>${character.dexterity}</td>
            <td>${character.intelligence}</td>
            <td>${character.willpower}</td>
            <td>${character.fellowship}</td>
        </tr>
    </tbody>
</table>
